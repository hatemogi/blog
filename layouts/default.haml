%head
  %meta(charset='utf-8')
  %title= item[:title] || 'hatemogi.com'
  %script(src="/js/jquery.js" type="text/javascript")
  %script(src="/js/application.js" type="text/javascript")
  %script(src="/js/google-code-prettify/prettify.js" type="text/javascript")
  %script(src="/js/bootstrap.js" type="text/javascript")
  %script(src="//platform.twitter.com/widgets.js")
  %link(rel="stylesheet" type="text/css" href="/css/bootstrap.css")
  %link(rel="stylesheet" type="text/css" href="/css/bootstrap-responsive.css")
  %link(rel="stylesheet" type="text/css" href="/css/prettify.css")
  %link(rel="stylesheet" type="text/css" href="/css/hatemogi.css")
  %link(rel="alternate" type="application/atom+xml" title="feed" href="#{site.config[:feed_url]}")
%body(style="padding-top: 10px;")
  #fb-root
  .container
    %section#navigation
      .navbar
        .navbar-inner
          .container(style="width: auto;")
            %a.brand(href="/") hatemogi.com
            %ul.nav
              %li
                %a(href="/articles/") 글
              -# %li
              -#   %a(href="/guestbook/") 방명록
            %ul.nav.pull-right
              %li
                %a(href="http://twitter.com/hatemogi") @hatemogi
              %li
                %a(href="http://blog.hatemogi.com/") 이전블로그
    %section#main-content
      - if item[:kind] == 'article'
        .row
          .span8><
            - content_for :body do
              ~ yield 
            ~ render 'article', :article => item, :width => 550
          -# .span4><
          -#   %ul.unstyled
          -#     - sorted_articles.each do |a|
          -#       %li
          -#         %a(href="#{a.identifier}")= a[:title]
      - else
        .row
          .span8>= yield
          .span4.right

    %footer(style="padding-bottom: 20px'")
      .pull-right
        Copyright © 2011,2012 hatemogi
      %a.twitter-follow-button(href="https://twitter.com/hatemogi" data-show-count="false") Follow @hatemogi
    %script
      $(prettyPrint);
